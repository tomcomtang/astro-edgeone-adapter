---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import BlogCarousel from "../../components/BlogCarousel";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        margin: 0;
        padding: 0;
      }

      /* ÂÖ®Â±è Hero Âå∫Âüü */
      .hero-section {
        position: relative;
        height: 100vh;
        min-height: 600px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: center;
        padding: 2rem;
        overflow: hidden;
      }

      .hero-content {
        position: relative;
        z-index: 10;
        max-width: 800px;
      }

      .hero-title {
        font-size: 4rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
        animation: fadeInUp 1s ease;
      }

      .hero-subtitle {
        font-size: 1.5rem;
        margin: 0 0 2rem 0;
        opacity: 0.9;
        animation: fadeInUp 1s ease 0.2s backwards;
      }

      .hero-scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s infinite;
        cursor: pointer;
      }

      .hero-scroll-indicator svg {
        width: 40px;
        height: 40px;
        opacity: 0.7;
      }

      /* ËΩÆÊí≠Âå∫Âüü */
      .carousel-section {
        padding: 5rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
      }

      .section-title {
        font-size: 2.5rem;
        text-align: center;
        margin: 0 0 3rem 0;
        color: rgb(var(--black));
      }

      /* Âä®Áîª */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
          transform: translateX(-50%) translateY(0);
        }
        40% {
          transform: translateX(-50%) translateY(-10px);
        }
        60% {
          transform: translateX(-50%) translateY(-5px);
        }
      }

      /* ÂìçÂ∫îÂºè */
      @media (max-width: 768px) {
        .hero-title {
          font-size: 2.5rem;
        }

        .hero-subtitle {
          font-size: 1.2rem;
        }

        .section-title {
          font-size: 2rem;
        }

        .carousel-section {
          padding: 3rem 1rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <!-- ÂÖ®Â±è Hero Âå∫Âüü -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">‚ú® Welcome to Our Blog</h1>
        <p class="hero-subtitle">
          Discover amazing stories, insights, and ideas from our collection
        </p>
      </div>

      <div
        class="hero-scroll-indicator"
        onclick="document.querySelector('.carousel-section').scrollIntoView({ behavior: 'smooth' })"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- ËΩÆÊí≠Âå∫Âüü (Astro Island Ê®°Âºè) -->
    <section class="carousel-section">
      <h2 class="section-title">üìö Featured Posts</h2>
      <BlogCarousel posts={posts} client:visible />
    </section>

    <Footer />
  </body>
</html>
