---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

Astro.response.status = 404;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`404 - 页面未找到 | ${SITE_TITLE}`}
      description="抱歉，您访问的页面不存在"
    />
  </head>
  <body>
    <Header />
    <main>
      <div style="text-align: center; padding: 4em 1em;">
        <h1 style="font-size: 6em; margin: 0; color: rgb(var(--accent));">
          404
        </h1>
        <h2 style="margin-top: 0.5em; color: rgb(var(--gray-dark));">
          页面未找到
        </h2>
        <p style="color: rgb(var(--gray)); margin: 2em 0;">
          抱歉，您访问的页面不存在或已被移动。
        </p>
        <div style="margin-top: 3em;">
          <a
            href="/"
            style="
              display: inline-block;
              padding: 0.75em 2em;
              background: rgb(var(--accent));
              color: white;
              text-decoration: none;
              border-radius: 4px;
              font-weight: 500;
              transition: background 0.2s;
            "
            onmouseover="this.style.background='rgb(var(--accent-dark))'"
            onmouseout="this.style.background='rgb(var(--accent))'"
          >
            返回首页
          </a>
        </div>
        <div style="margin-top: 2em;">
          <a
            href="/blog"
            style="color: rgb(var(--accent)); text-decoration: none; margin: 0 1em;"
            >博客</a
          >
          <a
            href="/about"
            style="color: rgb(var(--accent)); text-decoration: none; margin: 0 1em;"
            >关于</a
          >
          <a
            href="/projects"
            style="color: rgb(var(--accent)); text-decoration: none; margin: 0 1em;"
            >项目</a
          >
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
